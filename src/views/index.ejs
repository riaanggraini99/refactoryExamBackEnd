<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>

  </head>
  <body>

    <div class="container">

      <h1><%= title %></h1>

      <!-- Form  -->
      <form action="/add" method="post">
        <div class="form-inline">
          <legend>
            tambahkan nama mantan
          </legend>
          <div class="form-group">
            <input id="title" class="form-control" type="text" name="nama" placeholder="nama mantan">
          </div>
           <div class="form-group mx-sm-3">
            <textarea class="form-control" name="alamat" rows="1" cols="80"
              placeholder="tambah alamat mantan"
            ></textarea>
          </div>
          <button class="btn btn-primary" type="submit">
            Add
          </button>
        </div>
      </form>

      <hr>
      <!-- List -->
      <table class="table table-bordered table-hover">
        <thead class="thead-inverse">
          <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Alamat</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < mantans.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><strong><%= mantans[i].nama %></strong></td>
              <td><%= mantans[i].alamat %></td>
              <td>
                <a
                  class="<%= mantans[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                  href="/edit/<%= mantans[i]._id %>">edit mantan</a>
                <a href="/delete/<%= mantans[i]._id %>"
                  class="btn btn-danger">
                  Hapus Mantan
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <script>
      document.getElementById('title').focus();
    </script>
  </body>
</html>
